    private void OKActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_OKActionPerformed
        // Passei o Parâmetro que o Exercício da Poupança já havia dado!
        
        int num_pagamentos = Integer.parseInt(NúmeroAnos.getText()) * 12;
        double total = 0;
        for (int i = 0; i < num_pagamentos; i++) {
        total = total + Integer.parseInt(DepósitoMensal.getText());
        total = total + total * Integer.parseInt(JurosMês.getText());    
        }
        
        // Depois pedi para retornar o Resultado do Cálculo da Poupança!
        
        Resultado.setText("Resultado: " + total);
    }//GEN-LAST:event_OKActionPerformed

    private void SairActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_SairActionPerformed
        // Fiz um Botão para Finalizar!
        
        System.exit(0);
    }//GEN-LAST:event_SairActionPerformed

