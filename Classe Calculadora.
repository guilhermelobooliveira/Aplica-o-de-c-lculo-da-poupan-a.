    private void IgualActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_IgualActionPerformed
        // Passei um Parâmetro para inserir o segundo Número e para fazer os Cálculos!
        n2 = Double.parseDouble(Visor.getText());
        
        // Teste Lógicos para se fazer os Cálculos com o Apertar dos Botões!
        
        if("soma".equals(resultado)){
        Visor.setText(String.valueOf(n1+n2));        
        }
        
        if("menos".equals(resultado)){
        Visor.setText(String.valueOf(n1-n2));    
        }
        
        if("vezes".equals(resultado)){
        Visor.setText(String.valueOf(n1*n2));    
        }
        
        if("divisao".equals(resultado)){
        Visor.setText(String.valueOf(n1/n2));    
        }
        
    }//GEN-LAST:event_IgualActionPerformed

    private void MultiplicarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_MultiplicarActionPerformed
        // Passei um Parâmetro para o Botão Multiplicar!
        
        n1 = Double.parseDouble(Visor.getText());
        
        // Depois vai ser apagado o primeiro Número para poder inserir o segundo Número!
        
        Visor.setText ("");
        
        // Entra no Teste Lógico "IF" para poder fazer às Operações da Calculadora!
        
        resultado = "vezes";
    }//GEN-LAST:event_MultiplicarActionPerformed

    private void SomarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_SomarActionPerformed
        // Passei um Parâmetro para o Botão Somar!   
        
        n1 = Double.parseDouble(Visor.getText());
        
        // Depois vai ser apagado o primeiro Número para poder inserir o segundo Número!
        
        Visor.setText ("");
        
        // Entra no Teste Lógico "IF" para poder fazer às Operações da Calculadora!
        
        resultado = "soma";       
    }//GEN-LAST:event_SomarActionPerformed

